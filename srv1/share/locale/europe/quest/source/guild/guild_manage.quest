quest guild_building begin
	state start begin
		when
			11000.chat.locale_quest(1692) or
			11002.chat.locale_quest(1692) or
			11004.chat.locale_quest(1692) with pc.is_gm()
		begin
			say_title(locale_quest(1278))
			say(locale_quest(1703))
			local u_name = input()
			local u_vid = find_pc_by_name(u_name)

			if u_vid == 0 then
				say_title(locale_quest(1710))
				say(u_name)
				return
			end

			local old_vid = pc.select(u_vid, u_vid)
			u_withdrawTime = tonumber(pc.getqf("new_withdraw_time"))
			u_disbandTime = tonumber(pc.getqf("new_disband_time"))
			pc.select(old_vid, old_vid)

			withdrawDelay = game.get_event_flag("guild_withdraw_delay")
			disbandDelay = game.get_event_flag("guild_disband_delay")

			say_title(locale_quest(1278))
			say(locale_quest(1711))

			if u_withdrawTime > 0 then
				say(string.format(locale_quest(1712), time_to_str(u_withdrawTime) .. locale_quest(1713) .. withdrawDelay))
			end

			if u_disbandTime > 0 then
				say(string.format(locale_quest(1714), time_to_str(u_disbandTime) .. locale_quest(1715) .. disbandDelay))
			end

			local retryTime1 = u_withdrawTime + withdrawDelay * 86400
			local retryTime2 = u_withdrawTime + disbandDelay * 86400

			local retryTime = 0
			if retryTime1 > retryTime2 then
				retryTime = retryTime1
			else
				retryTime = retryTime2
			end

			local curTime = get_time()
			if curTime < retryTime then
				say(string.format(locale_quest(1716), time_to_str(retryTime) .. locale_quest(1717) .. ((retryTime - curTime) / 3600)))

				if is_test_server() then
					local s = select(locale_quest(1718), locale_quest(39))
					if s == 1 then
						local old_vid = pc.select(u_vid, u_vid)
						local curTime = get_time()
						pc.setqf("new_withdraw_time", curTime - withdrawDelay * 86400)
						pc.setqf("new_disband_time", curTime - disbandDelay * 86400)
						pc.select(old_vid, old_vid)
					end
				end
			else
				say(locale_quest(1719))
			end
		end

		when
			11000.chat.locale_quest(1693) or
			11002.chat.locale_quest(1693) or
			11004.chat.locale_quest(1693) with pc.is_gm()
		begin
			say(string.format(locale_quest(1694), bool_to_str(pc.has_guild()) .. " [ENTER)pc.is_guildmaster: " .. bool_to_str(pc.is_guild_master()) .. " [ENTER)pc.empire: " .. pc.get_empire() .. " [ENTER)npc.empire: " .. npc.get_empire()))
		end

		when
			11000.chat.locale_quest(2622) or
			11002.chat.locale_quest(2622) or
			11004.chat.locale_quest(2622) with pc.hasguild() and not pc.isguildmaster() and (pc.is_gm() or npc.get_empire() == pc.get_empire())
		begin
			say_title(locale_quest(1278))
			say(locale_quest(1695))
			local s = select(locale_quest(2625), locale_quest(2600))
			if s == 1 then
				say_title(locale_quest(1278))
				say(locale_quest(1696))
				pc.remove_from_guild()
				pc.setqf("new_withdraw_time", get_global_time())
			end
		end

		when
			11000.chat.locale_quest(2594) or
			11002.chat.locale_quest(2594) or
			11004.chat.locale_quest(2594) with pc.has_guild() and pc.is_guild_master() and (pc.is_gm() or npc.get_empire() == pc.get_empire())
		begin
			say_title(locale_quest(1278))
			say(locale_quest(1697))
			local s = select(locale_quest(2625), locale_quest(2600))
			if s == 1 then
				say_title(locale_quest(1278))
				say(locale_quest(1698))
				pc.destroy_guild()
				pc.setqf("new_disband_time", get_global_time())
				pc.setqf("new_withdraw_time", get_global_time())
			end
		end

		when
			11000.chat.locale_quest(1699) or
			11002.chat.locale_quest(1700) or
			11004.chat.locale_quest(1700) with not pc.hasguild()
		begin
			local level_limit
			local guild_create_item

			level_limit = 40
			guild_create_item = false

			if game.get_event_flag("guild_withdraw_delay") * 86400 > get_global_time() - pc.getqf("new_withdraw_time") then
				say_title(locale_quest(1278))
				say(locale_quest(1701))
				--say(string.format(locale_quest(1702), game.get_event_flag("guild_withdraw_delay")))
				return
			end

			if game.get_event_flag("guild_disband_delay") * 86400 > get_global_time() - pc.getqf("new_withdraw_time") then
				say_title(locale_quest(1278))
				say(locale_quest(1704))
				--say(string.format(locale_quest(1702), game.get_event_flag("guild_disband_delay")))
				return
			end

			say_title(locale_quest(1278))
			say(locale_quest(1705))

			local s = select(locale_quest(2625), locale_quest(2600))
			if s == 2 then
				return
			end

			if pc.get_level() >= 40 then
				if pc.get_gold() >= 200000 then
					if not guild_create_item or pc.count_item(guild_create_item) > 0 then
						game.request_make_guild()
					end
				else
					say_title(locale_quest(1278))
					say(locale_quest(1706))
					return
				end
			else
				say_title(locale_quest(1278))
				say(locale_quest(1707))
			end
		end
	end
end
