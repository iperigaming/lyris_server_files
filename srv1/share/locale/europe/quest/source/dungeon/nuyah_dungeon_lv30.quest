			d.setf("seal_count", count)

			local unique = dungeonLib.GetUnique("seal_%d", DUNGEON_COUNT_SEAL_LEVEL8)
			
			d.kill_unique(unique)
			item.remove()

			if count >= DUNGEON_COUNT_SEAL_LEVEL8 then
				d.kill_all()

				d.setf("seal_count", 0)

				nuyah_dungeon_lv30.set_level(9)
			else
				d.notice_sub_mission("(%d / %d)", count, DUNGEON_COUNT_SEAL_LEVEL8)
			end
		end

		when DUNGEON_MOB_LEVEL8_SEAL.take with item.get_vnum() == DUNGEON_ITEM_LEVEL8_DROP and nuyah_dungeon_lv30.is_dungeon() and d.getf("dungeon_level") == 8 begin
			local count = d.getf("seal_count") + 1
			d.setf("seal_count", count)

			npc.kill()
			item.remove()

			if count >= DUNGEON_COUNT_SEAL_LEVEL8 then
				d.kill_all()

				d.setf("seal_count", 0)

				nuyah_dungeon_lv30.set_level(9)
			else
				d.notice_sub_mission("(%d / %d)", count, DUNGEON_COUNT_SEAL_LEVEL8)
			end
		end

		-- level 10
		when kill with npc.get_race() == DUNGEON_MOB_LEVEL10_BOSS and nuyah_dungeon_lv30.is_dungeon() and d.getf("dungeon_level") == 10 begin
			d.kill_all()

			nuyah_dungeon_lv30.set_level(11)
		end

		-- level 11
		when kill with npc.get_race() == DUNGEON_MOB_LEVEL11_BOSS and nuyah_dungeon_lv30.is_dungeon() and d.getf("dungeon_level") == 11 begin
			nuyah_dungeon_lv30.clear_timers()

			d.clear_regen()
			d.kill_all()

			d.complete()

			server_timer("nuyah_dungeon_lv30_final_exit", 2*60, d.get_map_index())
			d.notice_mission(91728, mob_link(DUNGEON_MOB_LEVEL11_BOSS))
		end

		-- server timer
		when nuyah_dungeon_lv30_warp.server_timer begin
			if d.select(get_server_timer_arg()) then
				nuyah_dungeon_lv30.create_level()
			end
		end
		
		when kill with nuyah_dungeon_lv30.is_dungeon() begin
			local level = d.getf("dungeon_level")
			local count = d.getf("monster_count")

			if level == 1 then
				if d.new_count_monster() <= (count - DUNGEON_COUNT_MOB_LEVEL1) then
					d.kill_monster()
					
					d.setf("monster_count", 0)
					nuyah_dungeon_lv30.set_level(2)
				else
					d.notice_sub_mission("(%d / %d)", count - d.new_count_monster(), DUNGEON_COUNT_MOB_LEVEL1)
				end
			elseif level == 5 then
				if d.new_count_monster() <= (count - DUNGEON_COUNT_MOB_LEVEL5) then
					d.kill_monster()
					
					d.setf("monster_count", 0)
					nuyah_dungeon_lv30.set_level(6)
				else
					d.notice_sub_mission("(%d / %d)", count - d.new_count_monster(), DUNGEON_COUNT_MOB_LEVEL5)
				end
			elseif level == 9 then
				if d.new_count_monster() <= (count - DUNGEON_COUNT_MOB_LEVEL9) then
					d.kill_all()
					
					d.setf("monster_count", 0)
					nuyah_dungeon_lv30.set_level(10)
				else
					d.notice_sub_mission("(%d / %d)", count - d.new_count_monster(), DUNGEON_COUNT_MOB_LEVEL9)
				end
			end
		end

		-- server time left timers
		when nuyah_dungeon_lv30_60min_left.server_timer begin
			if d.select(get_server_timer_arg()) then
				d.notice(91733)
				server_timer("nuyah_dungeon_lv30_45min_left", 15*60, d.get_map_index())
			end
		end

		when nuyah_dungeon_lv30_45min_left.server_timer begin
			if d.select(get_server_timer_arg()) then
				d.notice(91734)
